<%= form_tag posts_path do %>
  <label>Post title:</label><br>
  <%= text_field_tag "post[title]", @post.title, id: "title" %><br>

  <label>Post Description</label><br>
  <%= text_area_tag "post[description]", @post.description, id: "description" %><br>

  <%= submit_tag "Submit Post" %>
<% end %>
